{
  "name": "1337-events-backend",
  "version": "1.0.0",
  "description": "Backend API for 1337 Events Management System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --detectOpenHandles",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "mkdir -p dist && cp -r src/ dist/ && cp package.json .env dist/",
    "migrate": "node src/scripts/migrate.js"
  },
  "keywords": [
    "events",
    "1337",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.16.0",
    "mongoose": "^7.0.3",
    "node-cron": "^4.1.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
